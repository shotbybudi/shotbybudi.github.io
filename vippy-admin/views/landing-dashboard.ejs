<%- include('partials/head', { title: 'Vippy Admin - Landing Page' }) %>

<!-- SimpleMDE CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
<style>
    .CodeMirror {
        background-color: #16161a;
        color: #fffffe;
        border: 1px solid #7f5af0;
        border-radius: 8px;
        margin-bottom: 0;
    }
    .CodeMirror-scroll {
        min-height: 150px;
        max-height: 300px;
    }
    .editor-toolbar.fullscreen {
        z-index: 1050 !important;
    }
    .CodeMirror.CodeMirror-fullscreen {
        z-index: 1050 !important;
    }
    .CodeMirror-cursor {
        border-left: 1px solid #fffffe;
    }
    .editor-toolbar {
        background-color: #242629;
        border-color: #7f5af0;
        opacity: 1;
    }
    .editor-toolbar a {
        color: #fffffe !important;
    }
    .editor-toolbar a.active, .editor-toolbar a:hover {
        background-color: #7f5af0;
        border-color: #7f5af0;
    }
    .editor-preview {
        background-color: #16161a;
        color: #fffffe;
    }
    .editor-preview-side {
        background-color: #16161a;
        color: #fffffe;
    }
</style>

<body>
    <%- include('partials/navbar') %>

    <div class="container py-5">
        <header class="mb-5 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href="/vippy" class="btn btn-outline-secondary me-3 border-0">
                    <i class="bi bi-arrow-left fs-4"></i>
                </a>
                <div>
                    <h1 class="display-5 fw-bold text-white mb-0">Landing Page</h1>
                    <p class="lead text-secondary mb-0">Customize your site's landing page content.</p>
                </div>
            </div>
            <div>
                <button type="submit" form="landingForm" class="btn btn-success btn-lg">
                    <i class="bi bi-save me-2"></i>Save Changes
                </button>
            </div>
        </header>

        <style>
            .card {
                background-color: #242629 !important;
                border: none !important;
                overflow: hidden; /* Prevent overflow */
            }
            .form-control, .input-group-text, .form-select {
                background-color: #16161a !important;
                border: none !important;
                color: #fffffe !important;
            }
            .form-control:focus, .form-select:focus {
                border: 1px solid #7f5af0 !important;
                box-shadow: none !important;
            }
            .card-header i {
                color: #2cb67d !important;
            }
            .btn-outline-danger {
                border-color: #ef4565;
                color: #ef4565;
            }
            .btn-outline-danger:hover {
                background-color: #ef4565;
                color: #fffffe;
            }
            /* Button Cards */
            .button-item {
                background-color: #16161a !important;
                border: none !important;
            }
            .button-item .form-control {
                background-color: #242629 !important;
            }
            /* Add Button filled white */
            .btn-add-custom {
                background-color: #fffffe !important;
                color: #16161a !important;
                border: none !important;
                font-weight: bold;
            }
            .btn-add-custom:hover {
                opacity: 0.9;
            }
        </style>

        <form id="landingForm" action="/vippy/landing/save" method="POST">
            <div class="row g-4">
                <!-- Main Content -->
                <div class="col-lg-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent p-4">
                            <h3 class="h4 mb-0"><i class="bi bi-card-text me-2"></i>Main Content</h3>
                        </div>
                        <div class="card-body p-4">
                            <div class="mb-1">
                                <label for="title" class="form-label text-white small fw-bold">Hero Title</label>
                                <input type="text" class="form-control bg-dark text-light border-secondary" id="title" name="title" value="<%= data.title || '' %>" placeholder="e.g. Hello, I'm Alex">
                            </div>
                            
                            <div class="mb-3">
                                <label for="subtitle" class="form-label text-white small fw-bold">Hero Subtitle (SEO Description)</label>
                                <input type="text" class="form-control bg-dark text-light border-secondary" id="subtitle" name="subtitle" value="<%= data.subtitle || '' %>" placeholder="e.g. Full Stack Developer & Designer">
                            </div>

                            <div class="mb-3">
                                <label for="text" class="form-label text-white small fw-bold">Additional Content (Markdown + Code)</label>
                                <textarea class="form-control bg-dark text-light border-secondary" id="text" name="text" rows="4"><%= data.text %></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="col-lg-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent p-4 d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0"><i class="bi bi-hdd-stack me-2"></i>Buttons</h3>
                            <button type="button" class="btn btn-sm btn-add-custom" onclick="addButton()">
                                <i class="bi bi-plus-lg me-1"></i>Add Button
                            </button>
                        </div>
                        <div class="card-body p-4">
                            <div id="buttons-container">
                                <% if (data.buttons && data.buttons.length > 0) { %>
                                    <% data.buttons.forEach((btn, index) => { %>
                                        <div class="button-item mb-3 p-3 rounded position-relative">
                                            <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-2" onclick="removeButton(this)"></button>
                                            <div class="row g-2">
                                                <div class="col-md-6">
                                                    <label class="form-label text-white small">Text</label>
                                                    <input type="text" class="form-control form-control-sm" name="buttons[<%= index %>][text]" value="<%= btn.text %>" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label text-white small">Link</label>
                                                    <input type="text" class="form-control form-control-sm" name="buttons[<%= index %>][link]" value="<%= btn.link %>" required>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="text-secondary text-center fst-italic no-buttons-msg">No buttons added yet.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script>
        var simplemde = new SimpleMDE({ 
            element: document.getElementById("text"),
            spellChecker: false,
            status: false,
            placeholder: "Welcome to my portfolio... (Markdown supported)"
        });

        function addButton() {
            const container = document.getElementById('buttons-container');
            const noButtonsMsg = container.querySelector('.no-buttons-msg');
            if (noButtonsMsg) noButtonsMsg.remove();

            const index = container.children.length;
            const html = `
                <div class="button-item mb-3 p-3 rounded position-relative">
                    <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-2" onclick="removeButton(this)"></button>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <label class="form-label text-white small">Text</label>
                            <input type="text" class="form-control form-control-sm" name="buttons[${index}][text]" placeholder="Button Text" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-white small">Link</label>
                            <input type="text" class="form-control form-control-sm" name="buttons[${index}][link]" placeholder="/url" required>
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', html);
        }

        function removeButton(btn) {
            btn.closest('.button-item').remove();
            // Re-index names to ensure proper array submission
            const items = document.querySelectorAll('.button-item');
            items.forEach((item, idx) => {
                item.querySelectorAll('input, select').forEach(input => {
                    const name = input.getAttribute('name');
                    input.setAttribute('name', name.replace(/\[\d+\]/, `[${idx}]`));
                });
            });
            
            if (items.length === 0) {
                document.getElementById('buttons-container').innerHTML = '<p class="text-secondary text-center fst-italic no-buttons-msg">No buttons added yet.</p>';
            }
        }
    </script>
</body>
