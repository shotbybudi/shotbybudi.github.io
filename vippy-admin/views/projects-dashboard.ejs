<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', { title: 'Projects Admin' }) %>
    <style>
        .card:hover {
            border-color: var(--success);
        }
        .card-img-top {
            height: 180px;
            object-fit: cover;
            background-color: #010101;
        }
        .empty-state i {
            color: var(--secondary);
        }
        .project-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
        }
        .badge-custom {
            background-color: #16161a !important;
            color: #fffffe;
            border: none !important;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container px-4 pb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center">
                <a href="/vippy" class="btn btn-outline-secondary me-3 border-0">
                    <i class="bi bi-arrow-left fs-5"></i>
                </a>
                <h2 class="mb-0">Projects</h2>
            </div>
            <a href="/vippy/projects/new" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>New Project
            </a>
        </div>

        <% if (projects.length === 0) { %>
            <div class="empty-state text-center py-5">
                <i class="bi bi-code-square mb-3 d-block" style="font-size: 4rem; opacity: 0.3;"></i>
                <h3 class="text-secondary">No projects yet</h3>
                <p class="text-secondary mb-4">Create your first project showcase</p>
                <a href="/vippy/projects/new" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-plus-lg me-2"></i>Create Project
                </a>
            </div>
        <% } else { %>
            <div class="project-grid">
                <% projects.forEach(function(project) { %>
                    <div class="card h-100">
                        <% if (project.image) { %>
                            <img src="<%= project.image %>" 
                                 class="card-img-top" 
                                 alt="<%= project.name %>"
                                 loading="lazy"
                                 onerror="this.src='https://placehold.co/600x400/16161a/7f5af0?text=No+Image'">
                        <% } else { %>
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-dark">
                                <i class="bi bi-code-slash text-secondary" style="font-size: 3rem;"></i>
                            </div>
                        <% } %>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title h6 mb-2"><%= project.name %></h5>
                            <p class="small text-secondary mb-3 text-truncate"><%= project.description || 'No description' %></p>
                            
                            <div class="mb-3">
                                <% project.tools.forEach(tool => { %>
                                    <span class="badge badge-custom fw-normal"><%= tool %></span>
                                <% }) %>
                            </div>
                            
                            <div class="mt-auto d-flex gap-2">
                                <a href="/vippy/projects/edit/<%= project.fileSlug %>" class="btn btn-primary btn-sm flex-grow-1 border-0">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                                <button class="btn btn-outline-danger btn-sm" onclick="deleteProject('<%= project.fileSlug %>')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color: var(--bg-secondary); color: var(--text-primary);">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">Delete Project</h5>
                    <button type="button" class="btn-close btn-close-custom" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this project?</p>
                    <p class="text-danger mb-0"><i class="bi bi-exclamation-triangle me-2"></i>This action cannot be undone.</p>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete Project</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let deleteSlug = null;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        const confirmDeleteBtn = document.getElementById('confirmDelete');

        function deleteProject(slug) {
            deleteSlug = slug;
            deleteModal.show();
        }

        confirmDeleteBtn.addEventListener('click', async () => {
            if (!deleteSlug) return;
            
            try {
                confirmDeleteBtn.disabled = true;
                confirmDeleteBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';
                
                const res = await fetch(`/vippy/projects/delete/${deleteSlug}`, { method: 'POST' });
                const data = await res.json();
                
                if (data.success) {
                    window.location.reload();
                } else {
                    alert(data.error || 'Error deleting project');
                    confirmDeleteBtn.disabled = false;
                    confirmDeleteBtn.textContent = 'Delete Project';
                }
            } catch (e) {
                alert('Error: ' + e.message);
                confirmDeleteBtn.disabled = false;
                confirmDeleteBtn.textContent = 'Delete Project';
            }
        });
    </script>
</body>
</html>
