<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', { title: 'Virtual Photography Admin' }) %>
    <style>
        .card:hover {
            border-color: var(--success);
        }
        
        .card-img-top {
            height: 180px;
            object-fit: cover;
            background-color: #010101;
        }
        
        .empty-state i {
            color: var(--secondary);
        }
        
        .album-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }
        
        .stats-item {
            color: var(--text-secondary);
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container px-4 pb-5">
        <% 
            const isB2Configured = (typeof hasB2Config !== 'undefined') ? hasB2Config : false;
        %>
        <% if (!isB2Configured) { %>
            <div class="alert d-flex align-items-center mb-4 text-white" role="alert" style="background: transparent; border: none;">
                <div>
                    <strong>Backblaze B2 Storage is not configured!</strong><br>
                    You cannot create new albums until you configure the storage settings.
                    <button type="button" class="btn btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#settingsModal" style="background-color: #2cb67d; border-color: #2cb67d; color: white;">
                        Configure Now
                    </button>
                </div>
            </div>
        <% } %>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center">
                <a href="/vippy" class="btn btn-outline-secondary me-3 border-0">
                    <i class="bi bi-arrow-left fs-5"></i>
                </a>
                <h2 class="mb-0">Albums</h2>
            </div>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#settingsModal" title="Settings">
                    <i class="bi bi-gear-fill"></i>
                </button>
                <a href="/vippy/vp/order" class="btn btn-outline-secondary">
                    <i class="bi bi-sort-down me-2"></i>Reorder
                </a>
                <% if (isB2Configured) { %>
                <a href="/vippy/vp/new" class="btn btn-primary" style="background-color: #7f5af0; border-color: #7f5af0; color: #fffffe;">
                    <i class="bi bi-plus-lg me-2 text-white"></i>New Album
                </a>
                <% } else { %>
                <button class="btn btn-primary" disabled title="Configure Backblaze B2 first" style="background-color: #7f5af0; border-color: #7f5af0; color: #fffffe;">
                    <i class="bi bi-plus-lg me-2 text-white"></i>New Album
                </button>
                <% } %>
            </div>
        </div>

        <% if (albums.length === 0) { %>
            <div class="empty-state text-center py-5">
                <i class="bi bi-images mb-3 d-block" style="font-size: 4rem; opacity: 0.3;"></i>
                <h3 class="text-secondary">No albums yet</h3>
                <p class="text-secondary mb-4">Create your first virtual photography album</p>
                <% if (isB2Configured) { %>
                <a href="/vippy/vp/new" class="btn btn-primary btn-lg px-4" style="background-color: #7f5af0; border-color: #7f5af0; color: #fffffe;">
                    <i class="bi bi-plus-lg me-2 text-white"></i>Create Album
                </a>
                <% } else { %>
                <button class="btn btn-primary btn-lg px-4" disabled style="background-color: #7f5af0; border-color: #7f5af0; color: #fffffe;">
                    <i class="bi bi-plus-lg me-2 text-white"></i>Create Album
                </button>
                <% } %>
            </div>
        <% } else { %>
            <div class="album-grid">
                <% albums.forEach(function(album) { %>
                    <div class="card h-100">
                        <% if (album.images.length > 0) { %>
                            <img src="<%= album.images[album.cardImage]?.thumb || album.images[0]?.thumb %>" 
                                 class="card-img-top" 
                                 alt="<%= album.title %>"
                                 loading="lazy">
                        <% } else { %>
                            <div class="card-img-top d-flex align-items-center justify-content-center">
                                <i class="bi bi-image text-secondary" style="font-size: 3rem;"></i>
                            </div>
                        <% } %>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title h6 mb-1"><%= album.title %></h5>
                            <p class="small text-secondary mb-3"><%= album.developer || 'No developer' %></p>
                            
                            <div class="d-flex gap-3 mb-4">
                                <span class="stats-item">
                                    <i class="bi bi-images me-1"></i> <%= album.imageCount %>
                                </span>
                                <span class="stats-item">
                                    <i class="bi bi-calendar3 me-1"></i> <span class="local-date" data-date="<%= album.date %>"><%= album.date %></span>
                                </span>
                            </div>
                            
                            <div class="mt-auto d-flex gap-2">
                                <a href="/vippy/vp/edit/<%= album.slug %>" class="btn btn-primary btn-sm flex-grow-1 border-0">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                                <button class="btn btn-outline-danger btn-sm" onclick="deleteAlbum('<%= album.slug %>', '<%= album.title %>')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content" style="background-color: var(--bg-secondary); color: var(--text-primary);">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">Delete Album</h5>
                    <button type="button" class="btn-close btn-close-custom" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong id="deleteAlbumName"></strong>?</p>
                    <p class="text-danger mb-0"><i class="bi bi-exclamation-triangle me-2"></i>This action cannot be undone.</p>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Album</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/settings-modal') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let albumToDelete = null;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        function deleteAlbum(slug, title) {
            albumToDelete = slug;
            document.getElementById('deleteAlbumName').textContent = title;
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
            if (!albumToDelete) return;
            
            const btn = document.getElementById('confirmDeleteBtn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';
            btn.disabled = true;

            try {
                const response = await fetch(`/vippy/vp/delete/${albumToDelete}`, {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    window.location.reload();
                } else {
                    alert('Error deleting album: ' + (data.error || 'Unknown error'));
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting album');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });

        // Format dates
        document.querySelectorAll('.local-date').forEach(el => {
            const dateStr = el.getAttribute('data-date');
            if (dateStr) {
                const date = new Date(dateStr);
                el.textContent = date.toLocaleDateString('en-GB', {
                    day: 'numeric',
                    month: 'short',
                    year: 'numeric'
                });
            }
        });
    </script>
</body>
</html>